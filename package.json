{
  "name": "@raha/homepage",
  "version": "0.0.1",
  "description": "Google AMP static site for the Raha Foundation",
  "repository": "git@github.com:rahafoundation/raha-homepage.git",
  "author": "Omar Diab <me@omardiab.com>",
  "license": "Apache-2.0",
  "private": true,
  "devDependencies": {
    "concurrently": "^3.5.1",
    "gh-pages": "^1.1.0",
    "live-server": "^1.2.0",
    "static-i18n": "^0.1.24",
    "watch": "^1.0.2"
  },
  "scripts": {
    "build": "./scripts/build",
    "deploy": "yarn build && gh-pages -d build/",
    "watch:build": "watch \"yarn build\" src/ locales/",
    "serve": "concurrently --kill-others \"live-server ./build\" \"yarn watch:build\""
  }
}
