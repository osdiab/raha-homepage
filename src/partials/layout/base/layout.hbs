<!doctype html>
<html lang="en" amp>
  <head>
    {{#block "head"}}
      <meta charset="utf-8">
      {{> raha/layout/base/ampBoilerplate }}

      <title data-t>raha_network</title>

      <!-- Webfonts -->
      <link href="https://fonts.googleapis.com/css?family=Aleo:700" rel="stylesheet">
      <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700" rel="stylesheet">

      <!-- Favicons -->
      <link rel="shortcut icon" href="/assets/lib/icons/favicons/favicon.ico">
      <link rel="icon" type="image/png" sizes="32x32" href="/assets/lib/icons/favicons/favicon-32x32.png">
      <link rel="icon" type="image/png" sizes="16x16" href="/assets/lib/icons/favicons/favicon-16x16.png">
      <link rel="apple-touch-icon" sizes="180x180" href="/assets/lib/icons/favicons/apple-touch-icon.png">

      <!-- Safari pinned tab icon -->
      <link rel="mask-icon" href="/assets/lib/icons/safari-pinned-tab.svg" color="#2A945E">

      <!-- Internationalization -->
      <link rel="canonical" href="https://raha.app/">
      {{!-- Hreflang link tags are added at compile time automatically. --}}
      {{> raha/generated/hreflangs}}

      <!-- For the robots -->
      <meta name="description" content="Raha is a community project dedicated to trusted identity and equal opportunity.">
      <meta name="keywords" content="Universal Basic Income,UBI,Blockchain,Identity,Trust,Transparency,Audit,Equality,Security">
      <meta property="og:title" content="Raha">
      <meta property="og:type" content="website">
      <meta property="og:url" content="https://raha.app/">
      <link rel="manifest" href="/assets/lib/manifest.json">

      <style amp-custom>
        {{#block "styles" }}
          {{!-- colors are taken from material-ui colors--}}
          {{!-- http://www.material-ui.com/#/customization/colors --}}

          html, body {
            font-size: 20px;
          }

          * {
            font-family: 'Source Sans Pro', sans-serif;
            margin: 0;
            border: 0;
            line-height: 1.58;
          }

          {{!-- text styles --}}
          h1, h2, h3, h4, h5,
          h1 *, h2 *, h3 *, h4 *, h5 * {
            font-family: 'Aleo', sans-serif;
            font-weight: 700;
            line-height: 1.1;
          }

          {{!-- text spacing --}}
          article {
            max-width: 700px;
            padding: 0 30px;
            margin: 0 auto;
          }

          article > *:not(:first-child) {
            margin-top: 1rem;
          }

          h1:not(:first-child),
          h2:not(:first-child),
          h3:not(:first-child),
          h4:not(:first-child),
          h5:not(:first-child) {
            margin-top: 1.5rem;
          }

          .button {
            display: inline-block;
            color: white;
            background-color: #6558f5;
            border-radius: 4px;
            padding: 10px 30px;
            text-decoration: none;
          }

          h1, article h1 {
            font-size: 1.85rem;
          }

          p:not(:first-child) {
            margin-top: 1rem;
          }

          {{!-- page layout --}}

          {{!-- flex for pushing footer to the bottom --}}
          {{!-- top padding offsets the fixed header height --}}
          body {
            font-family: sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            padding-top: 80px;
          }

          body > .pageSpacer {
            flex-grow: 1;
          }

          {{!-- fixed header height and position for sticky header --}}
          body > header {
            height: 80px;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background: linear-gradient(90deg, #5ec3e9, #96E6B3);
            display: flex;
            align-items: center;
            z-index: 1;
            border-bottom: 2px solid rgba(0, 0, 0, .1);
            box-shadow:rgba(0, 0, 0, .2) 0px 0px 4px;
            padding: 0 15px;
          }

          body > header > .headerContent {
            flex-grow: 1;
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 800px;
            margin: 0 auto;
          }
        {{/block }}
      </style>
    {{/block }}
  </head>

  <body>
    {{> raha/layout/base/trackPageview}}
    {{> raha/layout/base/header}}
    {{#block "body"}}
    {{/block}}
  </body>
</html>

