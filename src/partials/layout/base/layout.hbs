<!doctype html>
<html lang="en" amp>
  <head>
    {{#block "head"}}
      <meta charset="utf-8">
      {{> raha/layout/base/ampBoilerplate }}

      <title data-t>raha_network</title>

      <!-- Favicons -->
      <link rel="shortcut icon" href="/assets/lib/icons/favicons/favicon.ico">
      <link rel="icon" type="image/png" sizes="32x32" href="/assets/lib/icons/favicons/favicon-32x32.png">
      <link rel="icon" type="image/png" sizes="16x16" href="/assets/lib/icons/favicons/favicon-16x16.png">
      <link rel="apple-touch-icon" sizes="180x180" href="/assets/lib/icons/favicons/apple-touch-icon.png">
      <!-- Safari pinned tab icon -->
      <link rel="mask-icon" href="/assets/lib/icons/safari-pinned-tab.svg" color="#2A945E">

      <!-- Internationalization -->
      <link rel="canonical" href="https://raha.io/">
      {{!-- Hreflang link tags are added at compile time automatically. --}}
      {{> raha/generated/hreflangs}}

      <!-- For the robots -->
      <meta name="description" content="The Raha.io Network is a community project dedicated to trusted identity and equal opportunity.">
      <meta name="keywords" content="Universal Basic Income,UBI,Blockchain,Identity,Trust,Transparency,Audit,Equality,Security">
      <meta property="og:title" content="Raha.io Network">
      <meta property="og:type" content="website">
      <meta property="og:url" content="https://raha.io/">
      <link rel="manifest" href="/assets/lib/manifest.json">

      <style amp-custom>
        {{#block "styles" }}
          {{!-- colors are taken from material-ui colors--}}
          {{!-- http://www.material-ui.com/#/customization/colors --}}

          * {
            margin: 0;
            border: 0;
            line-height: 1.4;
          }

          a {
            color: #00ACC1;
          }

          a:hover, a:focus {
            color: #26C6DA;
          }

          {{!-- Links in headers look nicer without the underline --}}
          h1 a, h2 a, h3 a, h4 a {
            text-decoration: none;
          }

          a:active {
            color: #00ACC1;
          }

          body {
            font-family: sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
          }

          @media only screen
            and (max-device-width: 480px)
            and (-webkit-min-device-pixel-ratio: 2) {
              body {
                font-size: 4vw;
              }
          }

          body> .pageSpacer {
            flex-grow: 1;
          }

          {{> raha/layout/header/style}}
          {{> raha/layout/footer/style}}
        {{/block }}
      </style>
    {{/block }}
  </head>

  <body>
    {{> raha/layout/header/header}}

    {{#block "body"}}
    {{/block}}

    {{> raha/layout/footer/footer}}
  </body>
</html>

