.splashPage > h1 {
  margin-bottom: 40px;
}

.splashPage > h2 {
  margin-bottom: 30px;
}

.splashPage > h1,
.splashPage > h2 {
  text-align: center;
}

.splashPage > ul.features {
  list-style-type: none;
  padding: 0 50px;
  margin-bottom: 30px;

  display: flex;
  justify-content: center;
}

.splashPage > .features > li {
  margin: 0 20px;
}

.splashPage > .features > li > h3 {
  margin-bottom: 10px;
}

@media only screen and (max-width: 600px),
  (max-device-width: 830px) and (-webkit-min-device-pixel-ratio: 2) {
  .splashPage > ul.features {
    flex-wrap: wrap;
    text-align: center;
  }

  .splashPage > .features > li {
    flex-shrink: 0;
    margin: 0 20px;
    margin-bottom: 20px;
    text-align: center;
  }
}

@media only screen and (max-width: 600px) and (min-width: 480px) {
  .splashPage > .features > li {
    flex-basis: 40%;
  }
}

@media only screen and (max-width: 480px),
  (max-device-width: 830px) and (-webkit-min-device-pixel-ratio: 2) {
  .splashPage > .features > li {
    flex-basis: 100%;
  }
}

.splashPage > .invite {
  text-align: center;
}

.splashPage > .invite > h3 {
  margin-bottom: 20px;
}
