{{#extend "raha/layout/base/layout"}}

  {{#content "head" mode="append"}}
    <script async custom-element="amp-form" src="https://cdn.ampproject.org/v0/amp-form-0.1.js"></script>
  {{/content}}
  {{#content "styles" mode="append"}}
    .splashPage > .banner {
      display: flex;
      flex-direction: column;
      width: 100%;
      background: linear-gradient(90deg, #5ec3e9, #96E6B3);
      text-align: center;
      padding-top: 30px;
      padding-bottom: 30px;
    }

    {{!-- global content max-width of 800px --}}
    .splashPage > .banner > .content {
      max-width: 800px;
      margin: 0 auto;
      padding: 0 30px;
    }

    .splashPage > .banner > .content > *:not(:last-child) {
      margin-bottom: 30px;
    }

    .splashPage > .banner h2 {
      max-width: 500px;
    }

    .emailInput {
      font-size: 20px;
      margin-top: 10px;
      border: 1px solid black;
      padding: 5px;
      border-radius: 2px;
      border-color: #cfcfcf;
    }

    .spacer {
      height: 30px;
    }

    .centerFlex {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      text-align: center;
    }

    .splashPage > .description > div {
      flex-basis: 300px;
    }

    .whyContainer {
      margin-top: 30px;
      margin-bottom: 30px;
      display: flex;
      justify-content: space-between;
      flex-direction: column;
    }

    .whyContainer > h3 {
      margin-top: 0;
    }

    .whyLearnMore {
      justify-content: flex-end;
      margin: 0 10px;
    }

    h2.supports {
      text-align: center;
    }

    ul.features {
      list-style-type: none;
      padding: 0 30px;
      margin: auto;
    }

    #mce-responses {
      display: none;
    }

    ul.features > li > a {
      text-decoration: none;
      color: inherit;
    }

    ul.features > li > a > div {
      height: 315px;
      max-width: 250px;
      padding: 1px;
    }

    .splashPage > .login {
      text-align: center;
    }
  {{/content}}

  {{#content "body"}}
    <main class="splashPage">
      <section class="banner">
        <div class="content">
          <h2 data-t="splashPage.bannerTitle"></h2>
          <a class="button" href="/join" data-t="util.signUp"></a>
          <amp-img class="networkImg" height="7" width="16" layout="responsive" src="/assets/img/toons/family.png"></amp-img>
        </div>
      </section>
      <section class="description centerFlex">
        <div>
          <h4 data-t="splashPage.problem"></h4>
          <h4 data-t="splashPage.solution"></h4>
          <h4 data-t="splashPage.description"> </h4>
          <a href="/what-is-raha/"><button class="button" data-t="learnMore"></button></a>
          <div class="spacer"></div>
          <h4 data-t="splashPage.everyLife"></h4>
          <form method="post" action-xhr="https://raha.us18.list-manage.com/subscribe/post?u=df19cb2bb2149b51990f5aa31&amp;id=865d902f37" target="_top">
            <fieldset>
              <input class="emailInput" type="email" name="EMAIL" placeholder="ENTER YOUR EMAIL" required>
              <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
              <div id="mce-responses">
                <div class="response" id="mce-error-response"></div>
                <div class="response" id="mce-success-response"></div>
              </div>
              <input class="button" type="submit" data-attr-t value-t="splashPage.join">
            </fieldset>
            <div submit-success>
                Subscription successful!
            </div>
            {{!-- TODO This should show failure, but it gets shown even for 200 --}}
            <div submit-error>
                Subscribed!
            </div>
          </form>
        </div>
      </section>
      <section>
        <ul class="features centerFlex">
          <li>
            <a href="/why-ubi/">
              <div class="whyContainer">
                <amp-img height="9" width="16" layout="responsive" src="/assets/img/Mint.png"></amp-img>
                <h3 data-t="splashPage.ubi"></h3>
                <div class="button whyLearnMore" data-t="learnMore" />
              </div>
            </a>
          </li>
          <li>
            <a href="/why-trust/">
              <div class="whyContainer">
                <amp-img height="9" width="16" layout="responsive" src="/assets/img/Give.png"></amp-img>
                <h3 data-t="splashPage.trust"></h3>
                <div class="button whyLearnMore" data-t="learnMore" />
              </div>
            </a>
          </li>
          <li>
            <a href="/why-values/">
              <div class="whyContainer">
                <amp-img height="9" width="16" layout="responsive" src="/assets/img/Video.png"></amp-img>
                <h3 data-t="splashPage.values"></h3>
                <div class="button whyLearnMore" data-t="learnMore" />
              </div>
            </a>
          </li>
        </ul>
      </section>
      <section class="login">
        <a href="https://web.raha.app/login" data-t>splashPage.alreadyMember</a>
      </section>
    </main>
  {{/content}}
{{/extend }}
