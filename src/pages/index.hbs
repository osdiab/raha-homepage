{{#extend "raha/layout/base/layout"}}
  {{#content "styles" mode="append"}}
    .splashPage > section {
      display: flex;
      flex-direction: column;
      text-align: center;
      padding-top: 30px;
      padding-bottom: 30px;
    }

    .splashPage > .banner {
      background: linear-gradient(90deg, #5ec3e9, #96E6B3);
    }

    {{!-- global content max-width of 800px --}}
    .splashPage > .banner > .content {
      max-width: 800px;
      margin: 0 auto;
      padding: 0 30px;
    }

    .splashPage > .banner > .content > *:not(:last-child) {
      margin-bottom: 30px;
    }

    .splashPage > .banner h2 {
      max-width: 500px;
    }

    .rahaBasicIncome > * {
      max-width: 800px;
      padding: 0px 30px;
      margin: 0 auto;
    }

    .rahaBasicIncome > *:not(:last-child) {
      margin-bottom: 30px;
    }

    .rahaBasicIncome > .details {
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: left;
    }

    .rahaBasicIncome > .details > *:not(:last-child) {
      margin-right: 30px;
    }

    {{!-- Necessary since AMP images in flex parents receive no width:
    https://github.com/ampproject/amphtml/issues/7144 --}}
    .rahaBasicIncome > .details > amp-img {
      flex-basis: 50%;
      flex-shrink: 0;
    }

    .emailInput {
      font-size: 20px;
      margin-top: 10px;
      border: 1px solid black;
      padding: 5px;
      border-radius: 2px;
      border-color: #cfcfcf;
    }

    .splashPage > .description > div {
      flex-basis: 300px;
    }

    .whyContainer {
      margin-top: 30px;
      margin-bottom: 30px;
      display: flex;
      justify-content: space-between;
      flex-direction: column;
    }

    .whyContainer > h3 {
      margin-top: 0;
    }

    .whyLearnMore {
      justify-content: flex-end;
      margin: 0 10px;
    }

    h2.supports {
      text-align: center;
    }

    ul.features {
      list-style-type: none;
      padding: 0 30px;
      margin: auto;
    }

    #mce-responses {
      display: none;
    }

    ul.features > li > a {
      text-decoration: none;
      color: inherit;
    }

    ul.features > li > a > div {
      height: 315px;
      max-width: 250px;
      padding: 1px;
    }

    .splashPage > .login {
      text-align: center;
    }
  {{/content}}

  {{#content "body"}}
    <main class="splashPage">
      <section class="banner">
        <div class="content">
          <h2 data-t="splashPage.bannerTitle"></h2>
          <a class="button" href="/join" data-t="util.signUp"></a>
          <amp-img height="7" width="16" layout="responsive" src="/assets/img/toons/family.png"></amp-img>
        </div>
      </section>
      <section class="rahaBasicIncome">
        <h2 data-t="splashPage.rahaBasicIncome.title"></h2>
        <div class="details">
          <p data-t="splashPage.rahaBasicIncome.description"></p>
          <amp-img height="4" width="5" layout="responsive" src="/assets/img/toons/coin.png"></amp-img>
        </div>
      </section>

      <section>
        <ul class="features centerFlex">
          <li>
            <a href="/why-ubi/">
              <div class="whyContainer">
                <h3 data-t="splashPage.ubi"></h3>
                <div class="button whyLearnMore" data-t="learnMore" />
              </div>
            </a>
          </li>
          <li>
            <a href="/why-trust/">
              <div class="whyContainer">
                <amp-img height="9" width="16" layout="responsive" src="/assets/img/Give.png"></amp-img>
                <h3 data-t="splashPage.trust"></h3>
                <div class="button whyLearnMore" data-t="learnMore" />
              </div>
            </a>
          </li>
          <li>
            <a href="/why-values/">
              <div class="whyContainer">
                <amp-img height="9" width="16" layout="responsive" src="/assets/img/Video.png"></amp-img>
                <h3 data-t="splashPage.values"></h3>
                <div class="button whyLearnMore" data-t="learnMore" />
              </div>
            </a>
          </li>
        </ul>
      </section>
      <section class="login">
        <a href="https://web.raha.app/login" data-t>splashPage.alreadyMember</a>
      </section>
    </main>
  {{/content}}
{{/extend }}
